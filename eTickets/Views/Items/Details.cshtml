@model Item

@{
    ViewData["Title"] = "Details Item";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                
                <div class="form-group">
                    <img class="rounded-circle" src="@Model.PictureUrl" alt="@Model.Name" style="max-width:150px" />
                </div>
                <div class="form-group">
                    @Html.DisplayFor(modelItem=>Model.Name)
                </div>
                <div class="form-group">
                    @Html.DisplayFor(modelItem=>Model.Description)
                </div>
                <div class="form-group">
                    @Html.DisplayFor(modelItem=>Model.Price)
                </div>

                <div class="form-group">
                    <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('PictureUrl');
            output.src = $("#ProfilePictureUrl").val();
        })
    </script>
}