@using eTickets.Data.ViewModels;
@model ShoppingCartVM

@{
    ViewData["Title"] = "Shopping cart summary";
}

<div class="row">
    <div class="text-center">
        <h2>Your shopping cart summary</h2>
    </div>
    <div class="col-md-8 offset-md-2" style="margin-top:5%">
    <table class="table">
        <thead>
            <tr>
                <th>Selected amount</th>
                <th>Movie</th>
                <th>Price</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
            {
                <tr>
                    <td class="align-middle">@item.Amount</td>
                    <td class="align-middle">@item.Movie.Name</td>
                    <td class="align-middle">@item.Movie.Price.ToString() RON</td>
                    <td class="align-middle">@((item.Amount*item.Movie.Price).ToString()) RON </td>
                    <td class="align-middle">
                        <a class="text-center" asp-controller="Orders" asp-action="RemoveItemShoppingCart"
                        asp-route-id="@item.Movie.Id">
                        <i class="bi bi-cart-dash"></i>
                        </a>
                    <td class="align-middle">
                        <a class="text-center" asp-controller="Orders" asp-action="AddItemShoppingCart"
                        asp-route-id="@item.Movie.Id">
                        <i class="bi bi-cart-plus"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2"></td>
                <td><b>Total: </b></td>
                <td>@Model.ShoppingCartTotal.ToString() RON</td>
                <td></td>
            </tr>
        </tfoot>
    </table>
    </div>
    
    <div class="text-center">
        <div class="btn-group">
            <a class="btn btn-outline-primary" asp-action="CompleteOrder">
                Complete order
            </a>
            <a class="btn btn-outline-success" asp-controller="Movies" asp-action="Index">
                Add more items
            </a>
        </div>
    </div>
</div>